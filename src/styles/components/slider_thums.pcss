  
.thumbs {
    position: relative;    
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: center;
  }
  .thumbs__item {
    height: 100px;
    transition: .2s;
    overflow: hidden;
    &.active,
    &:hover {
      outline: 3px solid #f29400;
    }
  }
  
  .thumbs__link {
    display: block;
    height: 100%;
    background: transparent;
    padding: 0;
  }
  
  .thumbs__pic {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }