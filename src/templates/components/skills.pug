script(type="text/x-template")#skills-list
    .skills
        .skills__list(v-for="category in skills" :key="category.id")
            skills-row(
                :category="category"
            )
script(type="text/x-template")#skills-row
    .skills__row
        .skills--title  {{category.category}}
        .skill(v-for="skill in category.skills" :key="skill.id")
            skills-item(
                :skill="skill"
                )
script(type="text/x-template")#skills-item
    .skill__item
        svg(viewBox="0 0 100 100").skill__svg
            circle(cx="50" cy="50" r="40").skill__svg--under
            circle(cx="50" cy="50" r="40"  stroke="url(#gradient)" transform="rotate(180 50 50)" ref="colored-circle").skill__svg--above
            linearGradient(id="gradient" x1="0%" y1="0" x2="100%" y2="0%")   
                stop(offset="0%" stop-color="rgba(208, 115, 27, 1)")
                stop(offset="100%" stop-color="rgba(220, 147, 34, 1)")
        .skill__text {{skill.title}}